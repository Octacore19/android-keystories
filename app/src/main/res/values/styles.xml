<resources>

    <!-- Light/Day mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/comic_font</item>
        <item name="textColor">@color/main_color_grey_800</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="backgroundBoxColor">#ffffff</item>
        <item name="tintColor">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Dark/Night mode theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/comic_font</item>
        <item name="textColor">@color/colorWhite</item>
        <item name="backgroundColor">@color/main_color_grey_800</item>
        <item name="backgroundBoxColor">@color/main_color_grey_800</item>
        <item name="tintColor">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="EditTextWhite">
        <item name="android:background">@drawable/edittext_white_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <style name="AppTheme.NoToolBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


   <!-- MainActivity Toolbar Theme-->
    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>


    <style name="AppTheme.NoActionBar.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Beginning of Theme for Donations Activity -->
    <!-- Do not Delete -->

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="OTPButtonStyle">@style/otpBtnStyle</item>
        <item name="PayButtonStyle">@style/payBtnStylee</item>
        <item name="PinButtonStyle">@style/pinButtonStyle</item>
        <item name="OTPHeaderStyle">@style/otpHeaderStyle</item>
        <item name="TabLayoutStyle">@style/tabLayoutStyles</item>
        <item name="PinHeaderStyle">@style/pinHeaderStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="SavedCardButtonStyle">@style/svdCardsBtnStyle</item>
    </style>

    <style name="payBtnStylee" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/blue_button_curved</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabLayoutStyles" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>
    <!-- Do not Delete-->
    <!-- End of Theme for Donations Activity -->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
